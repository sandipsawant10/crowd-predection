# Server Configuration
PORT=5000
NODE_ENV=development # Use 'production' for production environment

# Database
MONGODB_URI=mongodb://localhost:27017/crowd_management
# For production: mongodb+srv://username:password@cluster.mongodb.net/crowd_management?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d
JWT_COOKIE_EXPIRE=7

# Camera Configuration
CAMERA_INACTIVE_THRESHOLD_MINUTES=5

# Alert Thresholds
CROWD_HIGH_THRESHOLD=200
CROWD_CRITICAL_THRESHOLD=500
DEFAULT_CROWD_ALERT_THRESHOLD=800

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173

# Logging
LOG_LEVEL=info

# Socket.io Configuration
SOCKET_CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:5173

# Admin Setup - Initial admin user (will be created if not exists)
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=ChangeThisPassword123

# API Version
API_VERSION=v1